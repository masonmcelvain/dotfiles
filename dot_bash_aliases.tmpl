alias ssh='TERM=xterm-256color ssh'

# TMUX
ta() {
   if [ $# -gt 0 ] ; then
      tmux attach -t $1
   else
      tmux attach
   fi
}
t() {
   if [ $# -gt 0 ] && [ "$1" == "new" ] ; then
      shift
      command tmux new-session -s "$@"
   elif [ $# -gt 0 ] && [ "$1" == "kill" ] ; then
      shift
      command tmux kill-session -t "$@"
   elif [ $# -gt 0 ] && [ "$1" == "rename" ] ; then
      shift
      command tmux rename-session -t "$@"
   elif [ $# -eq 2 ] && [ "$1" == "a" ] ; then
      shift
      command tmux attach-session -t "$@"
   else
      command tmux "$@"
   fi
}

