# Custom keybindings for bash

# Only set keybindings in interactive shells
if [[ $- == *i* ]]; then
	_NEWLINE=$'\n'
	_FZF_OPEN_EDITOR='$EDITOR $(fzf)'
	# CTRL-E - Open the selected file path in editor
	bind -m emacs-standard -x "\"\C-e\": $_FZF_OPEN_EDITOR$_NEWLINE"
	bind -m vi-command -x "\"\C-e\": $_FZF_OPEN_EDITOR$_NEWLINE"
	bind -m vi-insert -x "\"\C-e\": $_FZF_OPEN_EDITOR$_NEWLINE"
fi
